package com.sunbeam;

import java.util.Scanner;

public class Cricketer extends Player implements Bowler, Batter {
int runs;
int wickets;
int totalMatchesPlayed=0;
int totalRuns=0;
int totalWickets =0;

	public Cricketer() {
		// TODO Auto-generated constructor stub
	}

	@Override
	public int getRuns() {
		// TODO Auto-generated method stub
		return runs;
	}

	@Override
	public int getWickets() {
		// TODO Auto-generated method stub
		return wickets;
	}
	
	Scanner sc = new Scanner(System.in);
	@Override
    public void accept() {
	super.accept();
	System.out.println("enter runs:");
	runs= sc.nextInt();
	System.out.println("enter wickets:");
	wickets = sc.nextInt();
	}

	@Override
	public String toString() {
		return super.toString()+"runs=" + runs + ", wickets=" + wickets;
	}
}
