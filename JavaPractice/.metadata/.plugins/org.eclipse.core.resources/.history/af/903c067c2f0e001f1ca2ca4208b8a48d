package com.sunbeam.util;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DbUtil {
	private static final String URL = "jdbc:mysql://localhost:3306/rohitdb";
	private static final String USERNAME = "rohit";
	private static final String PASSWORD = "rohit123";
	
	public static Connection getConncetion() throws SQLException {
		return DriverManager.getConnection(URL, USERNAME, PASSWORD);
	}
}
