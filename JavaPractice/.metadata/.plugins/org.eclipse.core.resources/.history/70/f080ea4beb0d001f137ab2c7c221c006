package com.sunbeam.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import com.sunbeam.dbUtil.DbUtil;
import com.sunbeam.entity.Batch;

public class ModuleDao implements AutoCloseable {
private Connection connection;

public ModuleDao() throws SQLException{
	connection = DbUtil.getConnection();
}

public void insertBatch(Module module) throws SQLException {
	String sql = "INSERT INTO modules(name,course) VALUES(?,?)";
	try (PreparedStatement preparedStatement = connection.prepareStatement(sql)) {
		preparedStatement.setString(1, batch.getName());
		preparedStatement.setString(2, batch.getCourse());
		preparedStatement.executeUpdate();
	}
}

@Override
public void close() throws Exception {
	// TODO Auto-generated method stub
	
}

}
